# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                           controllers.Application.index

GET     /webSocketExample/connect                   controllers.WebSocketExample.connect

GET     /ajaxExample/get                            controllers.AjaxExample.get
POST    /ajaxExample/post                           controllers.AjaxExample.post

POST    /serializationExample/post                  controllers.SerializationExample.post

GET     /playRoutesExample/javaScriptRoutes                  controllers.PlayRoutesExample.javascriptRoutes
GET     /playRoutesExample/id/:blogPostId/title/:titleUrl    controllers.PlayRoutesExample.getWithParams(blogPostId: Int, titleUrl: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
